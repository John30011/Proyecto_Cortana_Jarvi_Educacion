# ===================================
# Configuración de la Base de Datos
# ===================================
MONGODB_URL=mongodb://localhost:27017
DB_NAME=gemini_educacion

# ===================================
# Configuración de Autenticación
# ===================================
SECRET_KEY=cambia_esto_por_una_clave_segura_y_aleatoria
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 horas
REFRESH_TOKEN_EXPIRE_DAYS=30      # 30 días

# ===================================
# Configuración del Servidor
# ===================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=True

# ===================================
# Configuración de CORS
# ===================================
CORS_ORIGINS=*

# ===================================
# Configuración de Correo Electrónico
# ===================================
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña
EMAILS_FROM_EMAIL=no-reply@gemini.edu
EMAILS_FROM_NAME=GEMINI Educativo

# ===================================
# Configuración de Seguridad
# ===================================
SECURE_COOKIES=False  # Cambiar a True en producción con HTTPS
SESSION_COOKIE_NAME=gemini_session
SESSION_SECRET_KEY=otra_clave_segura_y_aleatoria

# ===================================
# Configuración de la Aplicación Web
# ===================================
FRONTEND_URL=http://localhost:3000
EMAIL_RESET_TOKEN_EXPIRE_HOURS=24

# ===================================
# Configuración de Límites de Tasa
# ===================================
RATE_LIMIT=100/minute

# ===================================
# Configuración de Almacenamiento
# ===================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# ===================================
# Configuración de Logs
# ===================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===================================
# Configuración de n8n (Opcional)
# ===================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook/gemini
N8N_API_KEY=tu_api_key_de_n8n
